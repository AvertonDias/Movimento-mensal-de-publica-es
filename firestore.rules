
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CORE PHILOSOPHY
     * This ruleset enforces a strict user-ownership model for a personal inventory management system. 
     * Security is handled through path-based authorization, ensuring that users can only access 
     * data nested under their unique identifier (/users/{userId}).
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // --- COLLECTION RULES ---

    /**
     * @description Rules for monthly inventory records.
     * @path /users/{userId}/monthly_records/{month}/items/{itemId}
     */
    match /users/{userId}/monthly_records/{month}/items/{itemId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description Rules for individual inventory items.
     * @path /users/{userId}/inventory/{inventoryItemId}
     */
    match /users/{userId}/inventory/{inventoryItemId} {
      allow get, list: if isOwner(userId);
      
      allow create: if isOwner(userId) 
        && request.resource.data.id == inventoryItemId;
      
      allow update: if isExistingOwner(userId) 
        && request.resource.data.id == resource.data.id;
        
      allow delete: if isExistingOwner(userId);

      match /history/{historyId} {
        allow get, list: if isOwner(userId);
        
        allow create: if isOwner(userId) 
          && request.resource.data.inventoryItemId == inventoryItemId;
        
        allow update: if isExistingOwner(userId) 
          && request.resource.data.inventoryItemId == resource.data.inventoryItemId;
          
        allow delete: if isExistingOwner(userId);
      }
    }

    /**
     * @description Root user document rules to allow initial profile setup.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
      allow list: if false;
    }
  }
}
