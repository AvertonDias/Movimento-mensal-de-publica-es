rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CORE PHILOSOPHY
     * Personal inventory management system with a strict user-ownership model.
     * All data nested under /users/{userId} is owned and accessible only by that user.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Root user document rules
    match /users/{userId} {
      allow get, create, update, delete: if isOwner(userId);
      allow list: if false;

      // Allow recursive access to all subcollections for the owner
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
