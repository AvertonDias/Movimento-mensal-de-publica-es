
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Permite leitura do perfil para identificar o dono no convite
      allow get: if true;
      allow list, create, update, delete: if isOwner(userId);

      match /inventory/{itemId} {
        // Ajudantes precisam ler as definições de itens customizados
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /monthly_records/{monthKey} {
        // Ajudantes precisam ler o histórico compartilhado
        allow read: if true;
        
        match /items/{itemId} {
          allow read: if true;
          allow write: if isOwner(userId);
        }
      }
    }

    match /invites/{tokenId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
