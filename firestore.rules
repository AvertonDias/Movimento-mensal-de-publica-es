
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAuthorizedHelper(ownerId) {
      return isSignedIn() && exists(/databases/$(database)/documents/invites/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/invites/$(request.auth.uid)).data.ownerId == ownerId;
    }

    match /users/{userId} {
      allow get: if true;
      allow list, create, update, delete: if isOwner(userId);

      match /inventory/{itemId} {
        allow read: if true;
        allow write: if isOwner(userId) || isAuthorizedHelper(userId);

        match /requests/{requestId} {
          allow read: if true;
          allow write: if isOwner(userId) || isAuthorizedHelper(userId);
        }
      }

      match /monthly_records/{monthKey} {
        allow read: if true;
        
        match /items/{itemId} {
          allow read: if true;
          allow write: if isOwner(userId) || isAuthorizedHelper(userId);
        }
      }
    }

    match /invites/{tokenId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
