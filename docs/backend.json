
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Inventário Fácil application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "name",
        "createdAt"
      ]
    },
    "Invite": {
      "title": "Invite",
      "type": "object",
      "description": "A token that allows a registered helper to access a user's inventory.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string" },
        "helperId": { "type": "string", "description": "UID of the user who accepted the invite." },
        "ownerName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "label": { "type": "string", "description": "Name of the helper." }
      },
      "required": ["id", "ownerId", "createdAt"]
    },
    "Inventory": {
      "title": "Inventory Item",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "item": { "type": "string" },
        "code": { "type": "string" },
        "category": { "type": "string" },
        "sortOrder": { "type": "number" },
        "hidden": { "type": "boolean", "description": "Whether this item is hidden from the monthly count list." },
        "minStock": { "type": "number", "description": "Minimum stock threshold for alerts." }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Stores user profile data."
    },
    "/invites/{tokenId}": {
      "schema": { "$ref": "#/backend/entities/Invite" },
      "description": "Publicly accessible invitation tokens."
    },
    "/users/{userId}/inventory/{itemId}": {
      "schema": { "$ref": "#/backend/entities/Inventory" },
      "description": "Stores custom inventory definitions and overrides (like hidden status) for a specific user."
    },
    "/users/{userId}/monthly_records/{monthKey}/items/{itemId}": {
      "schema": { "type": "object" },
      "description": "Stores monthly inventory data snapshots."
    }
  }
}
